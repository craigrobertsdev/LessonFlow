@page "/"

<PageTitle>Home</PageTitle>

<div class="max-w-3xl mx-auto p-6">
  <div class="flex items-center gap-3 mb-4">
    <NavLink href="Account/Login" class="inline-flex items-center px-4 py-2 rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
      Login
    </NavLink>
    <button @onclick=@(() => NavigationManager.NavigateTo("/AccountSetup")) class="inline-flex items-center px-4 py-2 rounded-md text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100">
      Account Setup
    </button>
  </div>
</div>

@code {
  [Inject] NavigationManager NavigationManager { get; set; } = null!;
}